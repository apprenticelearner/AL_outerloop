{
  "agent" : {
    "type": "CREAgent",
    "stay_active": true,
    "dont_save": true,
    "args": {
      "search_depth" : 2,
      "how": "set_chaining",
      "when": "decisiontree",
      "where": "most_specific",
      "function_set" : ["Add", "Subtract", "Multiply", "Divide"],
      "feature_set" : ["Equals"],
    }
  },

  "set_params" : {
    "HTML": "./tutors/FractionArithmetic/fraction_arithmetic.html"
  },
  
  "batch_train": [
    {
      "agent_name": "Random Controller",
      "repetitions" : 100,
      "outer_loop_controller" : {
        "type" : "Random",
        "problem_set": {
          "glob" :
            {"key" : "question_file",
             "pattern": "./tutors/FractionArithmetic/mass_production_brds/*.brd"
            }
        }
      }
    }
  ]  
}
